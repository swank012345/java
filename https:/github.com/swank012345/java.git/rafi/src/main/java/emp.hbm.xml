<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
          "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
          "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">  
<hibernate-mapping>  
<class name="swank.rafi.Emp" table="emp121" discriminator-value="emp">  
<id name="id">  
<generator class="increment"></generator>  
</id>  
  
<discriminator column="type" type="string"></discriminator>  
<property name="name"></property>  
            
<subclass name="swank.rafi.Regemp" discriminator-value="reg_emp">  
<property name="salary"></property>  
<property name="bonus"></property>  
</subclass>  
            
<subclass name="swank.rafi.Conemp" discriminator-value="con_emp">  
<property name="rate"></property>  
<property name="duration"></property>  
</subclass>  
            
</class>  
            
</hibernate-mapping>  